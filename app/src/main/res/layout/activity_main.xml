<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            tools:context="com.devil.organo.activities.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#17ca00"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/toggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/organo_logo"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORGANO"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/center"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/map_marker" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/center"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Nearby Centres"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/howTo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_above="@+id/textView2"
                android:layout_toLeftOf="@+id/center"
                android:layout_toStartOf="@+id/center"
                android:scaleType="fitXY"
                android:src="@drawable/how_to" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView"
                android:layout_alignLeft="@+id/howTo"
                android:layout_alignStart="@+id/howTo"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="How To"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:id="@+id/textView2" />

            <ImageView
                android:id="@+id/about"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_above="@+id/textView3"
                android:layout_toEndOf="@+id/center"
                android:layout_toRightOf="@+id/center"
                android:scaleType="fitXY"
                android:src="@drawable/about" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignLeft="@+id/about"
                android:layout_alignStart="@+id/about"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="About"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="120dp"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView"
                android:padding="4dp"
                android:text="All rights reserved. Approved by Govt. of India"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/share"/>

        </RelativeLayout>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#4e4e4e"
        android:layout_gravity="start">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/extended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true">
            <LinearLayout
                android:id="@+id/head"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00d64b">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORGANO"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textSize="32sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/organo_logo"/>
            </LinearLayout>

            <TextView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@android:color/white"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/head"
                android:layout_marginTop="20dp"
                android:text="Menu"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/donor1"
                android:src="@drawable/donor"
                android:layout_below="@id/menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/donor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignTop="@id/donor1"
                android:layout_alignBottom="@id/donor1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/white"
                android:layout_toEndOf="@id/donor1"
                android:layout_toRightOf="@id/donor1"
                android:text="Become a donor"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/recent1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/recent"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_below="@id/donor1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent activities"
                android:id="@+id/recent"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_alignTop="@id/recent1"
                android:layout_alignBottom="@id/recent1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/recent1"
                android:layout_toRightOf="@id/recent1"/>

            <ImageView
                android:id="@+id/centre1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/centre"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_below="@id/recent1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centres"
                android:textColor="@android:color/white"
                android:id="@+id/centre"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_alignTop="@id/centre1"
                android:layout_alignBottom="@id/centre1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/centre1"
                android:layout_toRightOf="@id/centre1"/>

            <ImageView
                android:id="@+id/notification1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notifications"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/centre1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:id="@+id/notification"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_alignTop="@id/notification1"
                android:layout_alignBottom="@id/notification1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/notification1"
                android:layout_toRightOf="@id/notification1"/>

            <ImageView
                android:id="@+id/blood1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/blood"
                android:contentDescription="@string/app_name"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/notification1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Blood"
                android:id="@+id/blood"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_alignTop="@id/blood1"
                android:layout_alignBottom="@id/blood1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/blood1"
                android:layout_toRightOf="@id/blood1" />

            <ImageView
                android:id="@+id/weblink1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/linkcentre"
                android:contentDescription="@string/app_name"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/blood1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link a centre"
                android:id="@+id/weblink"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#6600ff"
                android:layout_alignTop="@id/weblink1"
                android:layout_alignBottom="@id/weblink1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/weblink1"
                android:layout_toRightOf="@id/weblink1" />

        </RelativeLayout>

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
